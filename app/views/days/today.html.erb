<div class="container">
  <div class="row bg-primary rounded-top">
    <div class="col text-light p-2">
      <h1>Today</h1>
    </div>
  </div>
  <div class="row bg-light border-bottom-0 border border-top-0 border-primary">
    <div class="col p-2">
      <h2>Overview:</h2>
      <div class="row border rounded-top pb-3 pt-3 mx-auto bg-light">
        <div class="col-3 offset-3 my-auto">
          <p class="my-auto"><b>Calories</b></p>
        </div>
        <div class="col-3">
          <p class="my-auto"><b>Protein</b></p>
        </div>
        <div class="col-3">
          <p class="my-auto"><b>Fat</b></p>
        </div>
      </div>
      <div class="row border border-bottom-0 border-top-0 mx-auto bg-white">
        <div class="col-3 pt-3">
          <p><b>Current:</b></p>
          <p><b>Target:</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:calories] %></b> (<%= nutri_delta @day.nutrition[:calories], @yesterday.nutrition[:calories] %>)</p>
          <p><b><%= @yesterday.nutrition[:calories] %> Cal</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:protein] %></b> (<%= nutri_delta @day.nutrition[:protein], @yesterday.nutrition[:protein] %>)</p>
          <p><b><%= @yesterday.nutrition[:protein] %> Cal</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:fat] %></b> (<%= nutri_delta @day.nutrition[:fat], @yesterday.nutrition[:fat] %>)</p>
          <p><b><%= @yesterday.nutrition[:fat] %> Cal</b></p>
        </div>
      </div>
      <div class="row border border-bottom-0 pb-3 pt-3 mx-auto bg-light">
        <div class="col-3 offset-3 my-auto">
          <p class="my-auto"><b>Carbs</b></p>
        </div>
        <div class="col-3">
          <p class="my-auto"><b>Fiber</b></p>
        </div>
        <div class="col-3">
          <p class="my-auto"><b>Sugar</b></p>
        </div>
      </div>
      <div class="row border rounded-bottom mx-auto bg-white">
        <div class="col-3 pt-3">
          <p><b>Current:</b></p>
          <p><b>Target:</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:carbs] %></b> (<%= nutri_delta @day.nutrition[:carbs], @yesterday.nutrition[:carbs] %>)</p>
          <p><b><%= @yesterday.nutrition[:carbs] %> Cal</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:fiber] %></b> (<%= nutri_delta @day.nutrition[:fiber], @yesterday.nutrition[:fiber] %>)</p>
          <p><b><%= @yesterday.nutrition[:fiber] %> Cal</b></p>
        </div>
        <div class="col-3 pt-3">
          <p><b><%= @day.nutrition[:sugar] %></b> (<%= nutri_delta @day.nutrition[:sugar], @yesterday.nutrition[:sugar] %>)</p>
          <p><b><%= @yesterday.nutrition[:sugar] %> Cal</b></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row bg-light border-bottom-0 border border-top-0 border-primary">
    <div class="col my-auto p-2">
      <h2>Meals:</h2>
    </div>
    <div class="col p-2 my-auto text-right">
      <a class="btn btn-primary text-light" href="/meals/new" role="button">New Meal</a>
    </div>
  </div>
  <div class="row bg-light rounded-bottom border border-top-0 border-primary">
    <% @todays_meals.each_with_index do |m, index_1| %>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="card border-primary bg-light mb-3">
          <div class="card-header">
            <h3><%= m.name %></h3>
            <p><b><%= m.nutrition[:calories] %> Cal</b></p>
          </div>
          <div class="card-body">
            <% m.ingredients_list.each_with_index do |i, index_2| %>
              <h4><%= pluralize i.servings, i.name %><br></h4>
              <div class="w-75 mx-auto d-none" id="nutri-<%= index_1 %>-<%= index_2 %>">
                <div class="row bg-dark text-light rounded-top">
                  <div class="col">
                    <b><%= i.calories %> Cal</b>
                  </div>
                </div>
                <div class="row bg-white border border-top-0 border-dark">
                  <div class="col">
                    <b>Protein:</b>
                  </div>
                  <div class="col text-right">
                    <b><%= i.protein %> g</b>
                  </div>
                </div>
                <div class="row bg-white border border-top-0 border-dark">
                  <div class="col">
                    <b>Fat:</b>
                  </div>
                  <div class="col text-right">
                    <b><%= i.fat %> g</b>
                  </div>
                </div>
                <div class="row bg-white border border-top-0 border-dark">
                  <div class="col">
                    <b>Carbs:</b>
                  </div>
                  <div class="col text-right">
                    <b><%= i.carbs %> g</b>
                  </div>
                </div>
                <div class="row bg-white border border-top-0 border-dark">
                  <div class="col">
                    <b>Fiber:</b>
                  </div>
                  <div class="col text-right">
                    <b><%= i.fiber %> g</b>
                  </div>
                </div>
                <div class="row bg-white border border-top-0 border-dark rounded-bottom">
                  <div class="col">
                    <b>Sugar:</b>
                  </div>
                  <div class="col text-right">
                    <b><%= i.sugar %> g</b>
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-link" id="btn-<%= index_1 %>-<%= index_2 %>" onclick="showHide('<%= index_1 %>-<%= index_2 %>')" name="button">Show More</button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  function showHide(id) {
    var el = document.getElementById('nutri-' + id)
    el.classList.toggle('d-none')
    var btn = document.getElementById('btn-' + id)
    if (btn.innerText == "Show Less") btn.innerText = "Show More"
    else btn.innerText = "Show Less"
  }
</script>
