<div class="row bg-primary rounded-top">
  <div class="col text-light p-2">
    <h1>Dashboard</h1>
  </div>
</div>
<div class="row bg-light border-bottom-0 border border-top-0 border-primary">
  <div class="col p-2">
    <h2>Calories:</h2>
    <%= line_chart @days_calories, adapter: "highcharts", id: 'calories-chart'  %>
  </div>
</div>
<script type="text/javascript">
  var options = {
    adapter: "highcharts",
    id: 'calories-chart',
    library: {
      chart: {
        backgroundColor: "#f8f9fa"
      },
      plotOptions: {
        series: {
          cursor: 'pointer',
          events: {
            click: function (event) {
              var date = new Date(event.point.x)
              y = date.getFullYear()
              d = date.getDate()
              m = date.getMonth() + 1
              location.href = `/days/${y}-${m}-${d}`
            }
          }
        }
      }
    },
    min: 0,
    max: 4000,
    colors: ["#28a745", "#165baa"],
    points: false
  }
  var chart = Chartkick.charts["calories-chart"]
  chart.setOptions(options)
</script>
