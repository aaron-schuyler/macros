<div class="card w-50 mx-auto">
  <div class="card-header">
    <h2>Log In</h2>
    <% flash.each do |type, msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  </div>
  <div class="card-body">
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= text_field_tag :username, "", :placeholder => "Username", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, "", :placeholder => "Password", :class => "form-control" %>
      </div>
    
      <%= link_to 'Log in with Google!', '/auth/google_oauth2', :class => "btn btn-white border-primary" %>
      <%= submit_tag "Login", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
